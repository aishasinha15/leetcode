class Solution {
public:
    bool isPalindrome(int x) {
      if(x>0){
       int rev=0;
       int a=x;
       while(a!=0){
           rev=rev*10+(a%10);
           a=a/10;
       }
       if(x==rev)
        return true;
       else
        return false; 
      }
      else if(x==0)
      return true;
      else
      return false;
    }
};
